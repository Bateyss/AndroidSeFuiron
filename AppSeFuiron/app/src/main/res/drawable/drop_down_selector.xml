<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:width="12dp" android:height="12dp" android:gravity="center" android:bottom="12dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="line" android:tint="@color/purple">
                        <solid android:color="@color/purple"/>
                        <stroke android:color="#aaaaaa" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="12dp" android:height="12dp" android:gravity="center" android:bottom="0dp">
                <rotate
                    android:fromDegrees="135"
                    android:toDegrees="135">
                    <shape android:shape="line" android:tint="@color/purple">
                        <solid android:color="@color/purple"/>
                        <stroke android:color="#aaaaaa" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>

</layer-list>