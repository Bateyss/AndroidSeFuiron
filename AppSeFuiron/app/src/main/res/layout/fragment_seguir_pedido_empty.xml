<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10x"
            android:layout_marginTop="@dimen/space_2x"
            android:layout_marginEnd="@dimen/space_10x"
            android:gravity="center"
            android:text="@string/empty_orders"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_5x"
            android:layout_marginTop="@dimen/space_2x"
            android:layout_marginEnd="@dimen/space_5x"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_empty_shopping_cart"
            android:contentDescription="Carrito triste" />


    </LinearLayout>
</LinearLayout>