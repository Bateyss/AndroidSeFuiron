<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.usuario.SeguirPedidoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_4x"
                android:layout_marginEnd="@dimen/space_5x"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewSubTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/asociate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/seguirPedidoDriverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/texts"
                        android:textColor="@color/purple" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/seguirPedidoDriverId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/texts"
                        android:textColor="@color/purple" />
                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextViewSubTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_10x"
                android:gravity="center"
                android:text="@string/time_stimated"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/seguirPedidoTimeStimated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_10x"
                android:drawableStart="@drawable/ic_pointer"
                android:gravity="center"
                android:text="@string/texts"
                android:textColor="@color/purple"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_5x"
                android:adjustViewBounds="true"
                android:src="@drawable/motoriasta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_1x"
                android:layout_marginEnd="@dimen/space_5x"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/seguirPedidoPointer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_pointer_gray"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/seguirPedidoStatusOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2x"
                    android:layout_weight="1"
                    android:text="@string/order_new"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_5x"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/seguirPedidoPointer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_pointer_gray"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/seguirPedidoStatusTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2x"
                    android:layout_weight="1"
                    android:text="@string/order_prepared"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_5x"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/seguirPedidoPointer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_pointer_gray" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/seguirPedidoStatusThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2x"
                    android:layout_weight="1"
                    android:text="@string/order_in_comming"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_2x"
                android:layout_marginEnd="@dimen/space_5x"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/seguirPedidoPointer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_pointer_gray" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/seguirPedidoStatusFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2x"
                    android:layout_weight="1"
                    android:text="@string/order_apointed"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>